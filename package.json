{
	"name": "mindapp",
	"scripts": {
		"client": "cd client && npm run dev",
		"server": "cd server && npm start",
		"dev-extension": "cd extension && npm run dev",
		"build-extension": "cd extension && npm run build",
		"start": "concurrently \"npm run server\" \"npm run client\" \"npm run build-extension\"",
		"dev": "concurrently \"npm run server\" \"npm run client\" \"npm run dev-extension\"",
		"format": "prettier . --write"
	},
	"prettier": {
		"printWidth": 100,
		"semi": true,
		"singleQuote": true,
		"useTabs": true,
		"trailingComma": "all"
	},
	"devDependencies": {
		"concurrently": "8.2.2",
		"prettier": "3.2.4"
	}
}
