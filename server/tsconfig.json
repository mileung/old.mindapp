{
	"ts-node": {
		"files": true,
	},
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
	},
	"typeAcquisition": {
		"exclude": ["@vite/vitejs"],
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules/**"],
}
